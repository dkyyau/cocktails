<h2><%= @cocktail.name %></h2>

<% @doses.each do |dose| %>
<p>
  <%= dose.description %> - <%= dose.ingredient.name %>
  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete?" } do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
</p>
<% end %>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-secondary" %>
<%= link_to "Back to cocktails", cocktails_path, class: "btn btn-warning"%>