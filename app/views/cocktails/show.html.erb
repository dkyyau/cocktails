<h2><%= @cocktail.name %></h2>

<% if @cocktail.image.attached? %>
  <%= cl_image_tag @cocktail.image.key, height: 300, width: 400, crop: :fill %>
<% end %>

<% @cocktail.doses.each do |dose| %>
  <p>
    <%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
  </p>
<% end %>

<%= render "dose_form", dose: [@cocktail, @dose] %>

<%= link_to "Back to cocktails", cocktails_path, class: "btn btn-warning" %>