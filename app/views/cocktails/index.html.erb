<div class="container text-center">
  <h1>Pick your poison</h1>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
    <% @cocktails.each do |cocktail| %>
      <div class="col p-3">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.image.key, height: 300, width: 400, crop: :fill, gravity: :auto %>')">
            <%= cocktail.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-secondary m-3" %>
</div>